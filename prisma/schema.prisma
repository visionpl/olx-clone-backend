// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  hashedPassword String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  offers    Offer[]  @relation("UserOffers")
}

model Offer {
  id          String           @id @default(uuid())
  offerName   String
  description String
  price       Decimal
  createdBy   User?            @relation("UserOffers", fields: [userEmail], references: [email])
  userEmail   String?
  phoneNumber String?
  categoryId  Int?
  category    Category? @relation("OfferCategory", fields: [categoryId], references: [id])
  districtId  Int?
  district    District? @relation("OfferDistric", fields: [districtId], references: [id])
  conditionId  Int?
  condition    Condition? @relation("OfferCondition", fields: [conditionId], references: [id])
}

model Category {
  id        Int                @id @default(autoincrement())
  name      String             @unique
  image     String?
  offers    Offer[]            @relation("OfferCategory")
}

model District {
  id        Int                @id @default(autoincrement())
  name      String             @unique
  offers    Offer[]            @relation("OfferDistric")
}

model Condition {
  id        Int                @id @default(autoincrement())
  name      String             @unique
  offers    Offer[]            @relation("OfferCondition")
}